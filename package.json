{
  "name": "hydrocav-website",
  "version": "2.1.0",
  "description": "A premium, professional website showcasing HydroCav's advanced water treatment technology with sophisticated liquid glass design elements and modern user experience.",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "start": "npx serve .",
    "dev": "npx serve .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest tests/security --passWithNoTests",
    "test:security:fast": "jest tests/security --passWithNoTests --maxWorkers=1",
    "test:related": "jest --findRelatedTests",
    "test:coverage:check": "jest --coverage --coverageThreshold='{\"global\":{\"statements\":80,\"branches\":80,\"functions\":80,\"lines\":80}}'",
    "lint": "eslint . --ext .js,.mjs",
    "lint:fix": "eslint . --ext .js,.mjs --fix",
    "lint:html": "eslint **/*.html",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality:check": "npm run lint && npm run format:check && npm run test:security",
    "quality:fix": "npm run lint:fix && npm run format",
    "validate": "npm run quality:check && npm run test:coverage:check",
    "prepare": "husky"
  },
  "keywords": [
    "water-treatment",
    "hydrocav",
    "liquid-glass",
    "glassmorphism",
    "static-website"
  ],
  "author": "HydroCav",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.24.7",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@types/jest": "^30.0.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-unsanitized": "^4.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "serve": "^14.2.0"
  }
}

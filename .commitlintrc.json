{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix", 
        "docs",
        "style",
        "refactor",
        "test",
        "chore",
        "security",
        "perf"
      ]
    ],
    "subject-case": [2, "never", ["upper-case", "pascal-case"]],
    "subject-max-length": [2, "always", 100],
    "body-max-line-length": [2, "always", 200]
  }
}